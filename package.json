		"@lexical/history": "file:./vendored_node_modules/@lexical/history",
		"@lexical/rich-text": "file:./vendored_node_modules/@lexical/rich-text",
		"@lexical/utils": "file:./vendored_node_modules/@lexical/utils",
		"@lexical/list": "file:./vendored_node_modules/@lexical/list",
		"@lexical/html": "file:./vendored_node_modules/@lexical/html",
		"@lexical/clipboard": "file:./vendored_node_modules/@lexical/clipboard",
		"@lexical/selection": "file:./vendored_node_modules/@lexical/selection",
